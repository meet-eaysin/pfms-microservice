# PFMS Development Environment Variables
# Safe defaults for local development

# ============================================
# Security (Development Only)
# ============================================
JWT_SECRET=dev_jwt_secret_change_in_production_min_32_characters

# ============================================
# Database Credentials
# ============================================
POSTGRES_AUTH_USER=postgres
POSTGRES_AUTH_PASSWORD=postgres_dev_password

POSTGRES_EXPENSE_USER=postgres
POSTGRES_EXPENSE_PASSWORD=postgres_dev_password

# ============================================
# Redis
# ============================================
REDIS_PASSWORD=redis_dev_password

# ============================================
# RabbitMQ
# ============================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=rabbitmq_dev_password

# ============================================
# MongoDB
# ============================================
MONGODB_USER=admin
MONGODB_PASSWORD=mongodb_dev_password

# ============================================
# MinIO
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minio_dev_password

# ============================================
# Elasticsearch
# ============================================
ELASTIC_PASSWORD=elastic_dev_password

# ============================================
# Application Settings
# ============================================
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_SWAGGER=true
CORS_ORIGIN=http://localhost:3000,http://localhost:8000
