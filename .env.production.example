# PFMS Production Environment Variables
# Copy this file to .env for local development or use in production deployment

# ============================================
# CRITICAL: Set these before deployment
# ============================================
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING_MIN_32_CHARS

# ============================================
# Database Credentials
# ============================================
POSTGRES_AUTH_USER=postgres
POSTGRES_AUTH_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

POSTGRES_EXPENSE_USER=postgres
POSTGRES_EXPENSE_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ============================================
# Redis
# ============================================
REDIS_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ============================================
# RabbitMQ
# ============================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ============================================
# MongoDB
# ============================================
MONGODB_USER=admin
MONGODB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ============================================
# MinIO
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ============================================
# Elasticsearch
# ============================================
ELASTIC_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ============================================
# Application Settings
# ============================================
NODE_ENV=production
LOG_LEVEL=info
ENABLE_SWAGGER=false
CORS_ORIGIN=https://your-domain.com
