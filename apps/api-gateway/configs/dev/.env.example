# Development Environment Variables
# Copy this file to .env and fill in the values

# Kong Admin API
KONG_ADMIN_URL=http://localhost:8001
KONG_ADMIN_TOKEN=

# Environment
ENVIRONMENT=dev

# Service Discovery (if using)
# SERVICE_DISCOVERY_URL=

# Logging
LOG_LEVEL=debug

# Rate Limiting (Redis - optional for dev)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DATABASE=0

# Authentication
# JWT_SECRET=your-dev-jwt-secret
# JWT_ALGORITHM=HS256

# CORS Origins (comma-separated)
CORS_ORIGINS=*

# Custom Plugin Paths (if any)
# KONG_PLUGINS=bundled,custom-plugin-name
