# Production Environment Variables
# Copy this file to .env and fill in the values
# NEVER commit actual production secrets to version control

# Kong Admin API
KONG_ADMIN_URL=https://kong-admin.pfms.example.com
KONG_ADMIN_TOKEN=your-production-admin-token

# Environment
ENVIRONMENT=prod

# Service Discovery
# SERVICE_DISCOVERY_URL=https://consul.pfms.example.com

# Logging
LOG_LEVEL=warn

# Rate Limiting (Redis - required for production)
REDIS_HOST=redis.pfms.example.com
REDIS_PORT=6379
REDIS_PASSWORD=your-production-redis-password
REDIS_DATABASE=0

# Authentication
JWT_SECRET=your-production-jwt-secret
JWT_ALGORITHM=HS256

# CORS Origins (comma-separated - strict in production)
CORS_ORIGINS=https://pfms.example.com,https://admin.pfms.example.com,https://app.pfms.example.com

# Custom Plugin Paths (if any)
# KONG_PLUGINS=bundled,custom-plugin-name

# SSL/TLS
# KONG_SSL_CERT_PATH=/path/to/cert.pem
# KONG_SSL_KEY_PATH=/path/to/key.pem
