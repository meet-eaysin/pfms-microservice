# Staging Environment Variables
# Copy this file to .env and fill in the values

# Kong Admin API
KONG_ADMIN_URL=https://kong-admin.staging.pfms.example.com
KONG_ADMIN_TOKEN=your-staging-admin-token

# Environment
ENVIRONMENT=staging

# Service Discovery
# SERVICE_DISCOVERY_URL=https://consul.staging.pfms.example.com

# Logging
LOG_LEVEL=info

# Rate Limiting (Redis)
REDIS_HOST=redis.staging.pfms.example.com
REDIS_PORT=6379
REDIS_PASSWORD=your-staging-redis-password
REDIS_DATABASE=0

# Authentication
JWT_SECRET=your-staging-jwt-secret
JWT_ALGORITHM=HS256

# CORS Origins (comma-separated)
CORS_ORIGINS=https://staging.pfms.example.com,https://staging-admin.pfms.example.com,http://localhost:3000

# Custom Plugin Paths (if any)
# KONG_PLUGINS=bundled,custom-plugin-name
