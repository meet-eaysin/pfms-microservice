{
  "name": "@pfms/api-gateway",
  "version": "1.0.0",
  "private": true,
  "description": "Kong API Gateway configuration and management",
  "scripts": {
    "test:e2e": "jest --config jest.config.js",
    "build": "yarn build:dev",
    "build:dev": "node scripts/build-config.js dev",
    "build:staging": "node scripts/build-config.js staging",
    "build:prod": "node scripts/build-config.js prod",
    "validate": "yarn validate:dev",
    "validate:dev": "yarn build:dev && node scripts/validate-config.js dev && deck validate --config dist/kong-dev.yaml",
    "validate:staging": "yarn build:staging && node scripts/validate-config.js staging && deck validate --config dist/kong-staging.yaml",
    "validate:prod": "yarn build:prod && node scripts/validate-config.js prod && deck validate --config dist/kong-prod.yaml",
    "sync": "yarn sync:dev",
    "sync:dev": "yarn build:dev && deck sync --config dist/kong-dev.yaml",
    "sync:staging": "yarn build:staging && deck sync --config dist/kong-staging.yaml",
    "sync:prod": "yarn build:prod && deck sync --config dist/kong-prod.yaml",
    "diff": "yarn diff:dev",
    "diff:dev": "yarn build:dev && deck diff --config dist/kong-dev.yaml",
    "diff:staging": "yarn build:staging && deck diff --config dist/kong-staging.yaml",
    "diff:prod": "yarn build:prod && deck diff --config dist/kong-prod.yaml",
    "dump": "deck dump --output-file configs/backup/kong-$(date +%Y%m%d-%H%M%S).yaml",
    "lint": "yamllint config/**/*.yaml",
    "format": "prettier --write \"config/**/*.{yaml,yml}\"",
    "format:check": "prettier --check \"config/**/*.{yaml,yml}\""
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "dotenv": "^16.4.5",
    "jest": "^30.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "yaml-lint": "^1.7.0"
  },
  "engines": {
    "node": ">=20.9.0"
  },
  "notes": {
    "deck-cli": "Deck CLI must be installed globally. See README for installation instructions."
  }
}
