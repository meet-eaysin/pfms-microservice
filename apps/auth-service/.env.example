# Auth Service Environment Variables

# Service
NODE_ENV=development
SERVICE_NAME=auth-service
SERVICE_PORT=3001
HOST=0.0.0.0

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/auth_db?schema=public"

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# better-auth Configuration
AUTH_SECRET=your-super-secret-key-change-in-production-min-32-chars
AUTH_URL=http://localhost:3001

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@pfms.com

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8000

# Swagger
ENABLE_SWAGGER=true

# Security
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRY=7d
SESSION_EXPIRY=604800

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX=100

# MFA
MFA_ISSUER=PFMS
MFA_WINDOW=1

# Logging
LOG_LEVEL=debug
