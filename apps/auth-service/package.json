{
  "name": "@pfms/auth-service",
  "version": "1.0.0",
  "description": "Authentication service with better-auth for PFMS",
  "author": "PFMS Team",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "check-types": "tsc --noEmit",
    "test": "jest --config jest.config.js",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest-integration.config.js",
    "test:e2e": "jest --config jest.config.e2e.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:watch:integration": "jest --config jest-integration.config.js --watch",
    "test:cov": "jest --config jest.config.js --coverage",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config jest.config.js",
    "test:ci": "jest --config jest.config.js --ci --maxWorkers=2 --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@pfms/config": "workspace:*",
    "@pfms/event-bus": "workspace:*",
    "@pfms/types": "workspace:*",
    "@pfms/utils": "workspace:*",
    "amqplib": "^0.10.9",
    "argon2": "^0.44.0",
    "better-auth": "^1.4.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "nodemailer": "^7.0.11",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "redis": "^5.10.0",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@pfms/eslint-config": "workspace:*",
    "@pfms/typescript-config": "workspace:*",
    "@prisma/client": "5.22.0",
    "@types/amqplib": "^0.10.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/nodemailer": "^7.0.4",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "5.22.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  }
}
