// Prisma schema for Auth Service
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid()) @db.Uuid
  email         String    @unique @db.VarChar(255)
  password_hash String?   @db.VarChar
  role          String    @default("user") @db.VarChar
  is_verified   Boolean   @default(false)
  mfa_enabled   Boolean   @default(false)
  mfa_secret    String?   @db.VarChar
  created_at    DateTime  @default(now())

  sessions      Session[]
  oauth_accounts OAuthAccount[]

  @@map("users")
}

model Session {
  id            String    @id @default(uuid()) @db.Uuid
  user_id       String    @db.Uuid
  refresh_token String    @db.Text
  device_info   Json?     @db.JsonB
  expires_at    DateTime

  user          User      @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model OAuthAccount {
  provider_id      String  @db.VarChar
  provider_user_id String  @db.VarChar
  user_id          String  @db.Uuid

  user             User    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@id([provider_id, provider_user_id])
  @@map("oauth_accounts")
}
