# ============================================
# Expense Service - Environment Configuration
# ============================================

# Service Identity
SERVICE_NAME=expense-service
SERVICE_PORT=3003
NODE_ENV=development

# ============================================
# Database (PostgreSQL)
# Expense service owns its own database
# ============================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=expense_db
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_URL=
DATABASE_SSL=false

# ============================================
# Redis (Shared Cache)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# RabbitMQ (Shared Message Bus)
# ============================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL=info
ENABLE_SWAGGER=true
ENABLE_METRICS=false

# ============================================
# Feature Flags
# ============================================
ENABLE_RECURRING_EXPENSES=true
ENABLE_EXPENSE_CATEGORIZATION=true
