# Expense Service Environment Variables

# Service Configuration
NODE_ENV=development
SERVICE_NAME=expense-service
SERVICE_PORT=3003
HOST=0.0.0.0

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres_dev_password@postgres-expense:5432/expense_db?schema=public

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password
REDIS_DB=1
REDIS_TTL=3600

# RabbitMQ Event Bus
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=rabbitmq_dev_password
RABBITMQ_VHOST=/

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8000

# Swagger/OpenAPI
ENABLE_SWAGGER=true

# Logging
LOG_LEVEL=debug

# Auth Service (for validation)
AUTH_SERVICE_URL=http://auth-service:3001
