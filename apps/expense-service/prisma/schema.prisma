generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String    @id @default(uuid()) @db.Uuid
  name      String
  parentId  String?   @db.Uuid
  icon      String?
  parent    Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children  Category[] @relation("CategoryHierarchy")
  expenses  Expense[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("categories")
}

model Expense {
  id              String            @id @default(uuid()) @db.Uuid
  userId          String            @db.Uuid
  amount          Decimal           @db.Decimal(12, 2)
  currency        String            @default("USD") @db.Char(3)
  categoryId      String            @db.Uuid
  category        Category          @relation(fields: [categoryId], references: [id])
  date            DateTime
  description     String?
  isRecurring     Boolean           @default(false)
  recurrenceId    String?           @db.Uuid
  recurrenceRule  RecurringExpense? @relation(fields: [recurrenceId], references: [id])
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([userId])
  @@index([date])
  @@map("expenses")
}

enum Frequency {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

model RecurringExpense {
  id        String    @id @default(uuid()) @db.Uuid
  userId    String    @db.Uuid
  amount    Decimal   @db.Decimal(12, 2)
  description String?
  frequency Frequency
  interval  Int       @default(1)
  startDate DateTime
  nextDueDate DateTime
  expenses  Expense[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([userId])
  @@map("recurring_expenses")
}

model Habit {
  id        String     @id @default(uuid()) @db.Uuid
  userId    String     @db.Uuid
  name      String
  unitCost  Decimal    @db.Decimal(10, 2)
  logs      HabitLog[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([userId])
  @@map("habits")
}

model HabitLog {
  id        String   @id @default(uuid()) @db.Uuid
  habitId   String   @db.Uuid
  habit     Habit    @relation(fields: [habitId], references: [id])
  quantity  Int      @default(1)
  date      DateTime @db.Date // Storing just the date part ideally, but Prisma uses DateTime
  createdAt DateTime @default(now())

  @@index([habitId])
  @@map("habit_logs")
}
