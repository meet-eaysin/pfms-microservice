# ============================================
# Planning Service Environment Variables
# ============================================

# Service Configuration
NODE_ENV=development
SERVICE_NAME=planning-service
SERVICE_PORT=3011
HOST=0.0.0.0

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8000

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres_dev_password@localhost:5432/planning_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=planning_db
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres_dev_password

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password
REDIS_DB=0
CACHE_TTL=3600

# RabbitMQ Event Bus
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=rabbitmq_dev_password
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=pfms_events
RABBITMQ_QUEUE=planning_service_queue

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Swagger Documentation
ENABLE_SWAGGER=true

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/api/v1/health

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=false
