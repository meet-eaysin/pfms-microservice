# User Service Environment Variables

# Service Configuration
NODE_ENV=development
SERVICE_NAME=user-service
SERVICE_PORT=3002
HOST=0.0.0.0

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres_dev_password@postgres-user:5432/user_db?schema=public

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password
REDIS_DB=0
REDIS_TTL=3600

# RabbitMQ Event Bus
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=rabbitmq_dev_password
RABBITMQ_VHOST=/

# S3/MinIO Storage
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=pfms-avatars
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minio_dev_password
S3_USE_SSL=false

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=debug

# Auth Service
AUTH_SERVICE_URL=http://auth-service:3001
