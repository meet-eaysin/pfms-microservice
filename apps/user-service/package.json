{
  "name": "@pfms/user-service",
  "version": "1.0.0",
  "description": "User profile and preferences management service for PFMS",
  "author": "PFMS Team",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc && tsc-alias",
    "start": "node dist/index.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "check-types": "tsc --noEmit",
    "test": "jest --config jest.config.js",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest-integration.config.js",
    "test:e2e": "jest --config jest.config.e2e.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:cov": "jest --config jest.config.js --coverage",
    "test:ci": "jest --config jest.config.js --ci --maxWorkers=2 --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.709.0",
    "@aws-sdk/s3-request-presigner": "^3.709.0",
    "@pfms/config": "workspace:*",
    "@pfms/date": "workspace:^",
    "@pfms/errors": "workspace:*",
    "@pfms/event-bus": "workspace:*",
    "@pfms/http": "workspace:*",
    "@pfms/schema": "workspace:*",
    "@pfms/types": "workspace:*",
    "@pfms/utils": "workspace:*",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "multer": "^1.4.5-lts.1",
    "prom-client": "^15.1.3",
    "sharp": "^0.33.5",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@pfms/eslint-config": "workspace:*",
    "@pfms/typescript-config": "workspace:*",
    "@prisma/client": "5.22.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "eslint": "^9.18.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "5.22.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  }
}
